{
  "name": "@zenvia/logger",
  "version": "1.3.2",
  "description": "A wrapper for Winston Logging Node.js library that formats the output on STDOUT as Logstash JSON format.",
  "license": "MIT",
  "main": "./src/lib/logger",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "contributors": [
    "Rodrigo Kamada <rodrigo.kamada@zenvia.com> (https://github.com/rodrigokamada)"
  ],
  "scripts": {
    "test": "nyc mocha ./test",
    "test:coveralls": "nyc mocha ./test && nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint **/*.js",
    "lint:fix": "eslint **/*.js --fix"
  },
  "homepage": "https://github.com/zenvia/zenvia-logger-node#readme",
  "repository": {
    "type": "git",
    "url": "git@github.com:zenvia/zenvia-logger-node.git"
  },
  "bugs": {
    "url": "https://github.com/zenvia/zenvia-logger-node/issues"
  },
  "keywords": [
    "Logger",
    "Logstash",
    "Zenvia",
    "Winston"
  ],
  "dependencies": {
    "app-root-dir": "^1.0.2",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.1.0",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.1",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0",
    "sinon": "^2.3.7",
    "sinon-chai": "^2.11.0",
    "std-mocks": "^1.0.1"
  },
  "nyc": {
    "extension": [
      ".js"
    ],
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "**/*.spec.js",
      "test",
      "coverage"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "cache": false,
    "all": true
  },
  "directories": {
    "test": "test"
  }
}
