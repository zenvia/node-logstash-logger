{
  "name": "zcc-logger",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "test": "nyc mocha ./test",
    "lint": "eslint **/*.js",
    "lint:fix": "eslint **/*.js --fix"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:zenvia-sms/node-zcc-logger.git"
  },
  "main": "./src/lib/logger",
  "dependencies": {
    "app-root-dir": "^1.0.2",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "sinon": "^2.3.7",
    "sinon-chai": "^2.11.0",
    "std-mocks": "^1.0.1"
  },
  "nyc": {
    "include": [
      "**/*.js"
    ],
    "extension": [
      ".js"
    ],
    "exclude": [
      "**/*.spec.js",
      "test",
      "coverage"
    ],
    "reporter": [
      "text",
      "html"
